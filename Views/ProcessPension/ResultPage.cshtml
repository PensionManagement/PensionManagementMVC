@model PensionManagementMVC.Models.Message

@{
    ViewData["Title"] = "ResultPage";
}

<h1>ResultPage</h1>

<div>
    <h4>Message</h4>
    <hr />
    <dl class="row">
        @if (Model.message == "You have sucessfully Get pension")
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PensionAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PensionAmount)
            </dd>
            <dd class="col-sm-10">

                <h2 class="text-success"> @Html.DisplayFor(model => model.message)</h2>
            </dd>
        }
        else
	    {
        <dd class="col-sm-10">

            <h2 class="text-danger"> @Html.DisplayFor(model => model.message)</h2>
        </dd>
	    }





    </dl>
</div>



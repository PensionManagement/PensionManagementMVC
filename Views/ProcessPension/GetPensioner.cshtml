@model PensionManagementMVC.Models.ProcessPension

@{
    ViewData["Title"] = "GetPensioner";
}

<h1>GetPensioner</h1>

<h4>ProcessPension</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetPensioner">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PAN" class="control-label"></label>
                <input asp-for="PAN" class="form-control" />
                <span asp-validation-for="PAN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AadhaarNo" class="control-label"></label>
                <input asp-for="AadhaarNo" class="form-control" />
                <span asp-validation-for="AadhaarNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PensionType" class="control-label"></label>
                <input asp-for="PensionType" class="form-control" />
                <span asp-validation-for="PensionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
